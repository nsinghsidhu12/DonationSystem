@model List<ClassLibDb.Models.Donation>

<h2>Donation Report</h2>

<table class="table">
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Date</th>
            <th>Contact</th>
            <th>Transaction Type</th>
            <th>Amount</th>
            <th>Payment Method</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donation in Model)
        {
            <tr>
                <td>@donation.TransId</td>
                <td>@donation.Date.ToShortDateString()</td>
<td>@(donation.Contact != null ? donation.Contact.FullName : "N/A")</td>
<td>@(donation.TransactionType != null ? donation.TransactionType.Name : "N/A")</td>
                <td>@donation.Amount.ToString("C")</td>
<td>@(donation.PaymentMethod != null ? donation.PaymentMethod.Name : "N/A")</td>
                <td>@donation.Notes</td>
            </tr>
        }
    </tbody>
</table>
