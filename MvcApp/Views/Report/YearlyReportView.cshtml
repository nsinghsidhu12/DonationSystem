@model List<Report>
@using ClassLibDb.ViewModels

@{
    ViewData["Title"] = "Yearly Reports";
}

<h1>Reports</h1>
<div>
    <button class="btn btn-primary" onclick="showYearlyReport()">Yearly Donation Report</button>
    <button class="btn btn-primary" onclick="showYearToDateReport()">Year-To-Date Donation Report</button>
</div>
<hr>


<div id="yearlyReport">
    <h2>Yearly Donation Report</h2>

    <h4>Donations made to Donation System</h4>
    <p>Date: January 1, @DateTime.UtcNow.Year until December 31, @DateTime.UtcNow.Year</p>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Donor Name</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var donationReport in Model)
                {
                    var donationsByContact = donationReport.Donations!.GroupBy(d => d.AccountNo);
                    foreach (var donationGroup in donationsByContact)
                    {
                        var donation = donationGroup.First();
                        <tr>
                            <td>@donationReport.ContactFullName</td>
                            <td>@donationGroup.Sum(d => d.Amount).ToString("C")</td>
                        </tr>
                    }
                }
                <tr>
                    <td><strong>Total</strong></td>
                    <td><strong>@Model.Sum(r => r.TotalAmount).ToString("C")</strong></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div id="yearToDateReport" style="display:none">
    <h2>Year-To-Date Donation Report</h2>

    <h4>Donations made to Donation System</h4>
    <p>Date: January 1, @DateTime.UtcNow.Year until @DateTime.UtcNow.ToString("MMMM d, yyyy")</p>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Donor Name</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var donationReport in Model)
                {
                    <tr>
                        <td>@donationReport.ContactFullName</td>
                        <td>@donationReport.TotalAmount.ToString("C")</td>
                    </tr>
                }
                <tr>
                    <td><strong>Total</strong></td>
                    <td><strong>@Model.Sum(r => r.TotalAmount).ToString("C")</strong></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script>
    function showYearlyReport() {
        document.getElementById("yearlyReport").style.display = "block";
        document.getElementById("yearToDateReport").style.display = "none";
    }

    function showYearToDateReport() {
        document.getElementById("yearlyReport").style.display = "none";
        document.getElementById("yearToDateReport").style.display = "block";
    }
</script>